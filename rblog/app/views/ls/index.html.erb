<%- model_class = L -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:a) %></th>
      <th>状态</th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th>方式</th>
    </tr>
  </thead>
  <tbody>
    <% @ls.each do |l| %>
      <tr>
        <td><%= link_to l.id, l_path(l) %></td>
        <td><a href=http://hz.58.com/zufang/<%= l.a %>x.shtml>http://hz.58.com/zufang/<%=l.a%>x.shtml</a></td>
        <td>成功</td>
        <td><%=l l.created_at %></td>
        <td>免费</td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_l_path(l), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      l_path(l),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_l1_path,
            :class => 'btn btn-primary' %>
